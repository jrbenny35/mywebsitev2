.container-fluid#contact
  h1 Contact me
  hr
  h3 Please fill out this contact form below
  form(ng-controller="ContactCtrl", role="form" ng-submit="saveContact()")
    .form-group
      label.control-label(for = "Name") Name
      input.form-control(type = "text", ng-model = "contact.name", placeholder = "Your name here", required)
    .form-group
      label.control-label(for = "Email") Email
      input.form-control(type = "email", ng-model = "contact.email", placeholder = "Your email address here", required)
    .form-group
      label.control-label(for = "Message") Message
      input.form-control(type = "text", ng-model = "contact.message", placeholder = "Spill your heart out here")
    input.btn.btn-primary(type = "submit" value= "Send")
  br
  h1 Reach out to me here if you wish
  hr
  .container-fluid
    .row
      .col-lg-6
        h3 Linked in
        a(href="http://linkedin.com/in/benjaminforehandjr", target="_blank")
          img(src="images/CBpFkPaz.png", style="width: auto; height: 200px", alt="linked in")
      .col-lg-6
        h3 Github
        a(href="http://github.com/jrbenny35", target="_blank")
          img(src="images/github-mark@1200x630.png", style="width: auto; height: 200px", alt="github img")
